#include<stdio.h>
int main()
{
    float Net,Gross,Allowance,Deduction;
    printf("Enter the gross salary: ");
    scanf("%f",&Gross);
   Allowance = Gross  * 0.1;
    Deduction = Gross* 0.03;
    Net= Gross + Allowance - Deduction;
    printf("Allowance is : %f * 0.1 = %f\n",Gross,Allowance);
    printf("Deduction is : %f * 0.03 = %f\n",Gross,Deduction);
    printf("Net salary is : %f + %f - %f = %f\n",Gross,Allowance,Deduction,Net);
    return 0;

}