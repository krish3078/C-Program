#include<stdio.h>
int main()
{
    float p,r,n,i;
    printf("Enter the principal amount:");
    scanf("%f",&p);
    printf("Enter the rate of interest:");
    scanf("%f",&r);
    printf("Enter the number of years:");
    scanf("%f",&n);
    i=p*r*n/100;
    printf("The interest is %f * %f * %f / 100 = %f\n ",p,r,n,100,i);
    return 0;

}