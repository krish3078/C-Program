#include<stdio.h>
int main()
{
    float s1,s2,s3,total,average;
    printf("Enter marks of subject 1:");
    scanf("%f",&s1);
    printf("Enter marks of subject 2:");
    scanf("%f",&s2);
    printf("Enter marks of subject 3:");
    scanf("%f",&s3);
    total = s1 + s2+ s3;
    average = total /3;
    printf("Total Marks - %f + %f + %f = %f\n",s1,s2,s3,total);
    printf("Average Marks = %f / 3 = %f\n",total ,average);
    return 0;

}